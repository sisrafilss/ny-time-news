<%- include("partials/header.ejs") %>

<main>
  <section class="container mx-auto py-10">
    <% if (locals.data) {%>
    <h1 class="text-2xl font-bold text-left mb-4"><%= data.section %></h1>
    <div class="max-w-screen-xl mx-auto">
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4">
        <% data.results.forEach(article => { %>

        <a href="<%= article.url %>" target="_blank" class="card group">
          <img
            src="<%= article?.multimedia[1]?.url %>"
            alt="News Image"
            class="w-full h-48 object-cover rounded-lg"
          />
          <div class="p-4 bg-white rounded-lg shadow-md">
            <h2 class="text-lg font-semibold"><%= article.title %></h2>
            <p class="text-gray-700"><%= article.abstract %>...</p>
            <button class="text-blue-500 hover:text-blue-700">Read More</button>
          </div>
        </a>
        <% }) %>
      </div>
    </div>
    <% } %>
  </section>
</main>

<%- include("partials/footer.ejs") %>
